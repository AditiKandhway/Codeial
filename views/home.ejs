<h1> Codeial/ <%=title%> </h1>

<section id ="feed-posts">
  <% if(locals.user) { %>
  <h4> Posts </h4>
    <form action="/posts/create" id="new-post-form" method = "POST">
      <textarea name="content" rows="3" cols="30"></textarea>
        <input type="submit" value ="Post">
      </form>
      <% } %>
      <div id="post-container">
         <ul>
           <% for(post of posts) { %>
             <li>
               <p>
               <%= post.content %>
               <br>
               <small>
                 <%= post.user.name %>
               </small>
               </p>
             </li>
             <% } %>
           </ul>
        </div>
</section>
